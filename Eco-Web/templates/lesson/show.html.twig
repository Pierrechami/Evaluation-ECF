{% extends 'base.html.twig' %}

{% block title %}Lesson{% endblock %}

{% block body %}

    {% if user == "ROLE_INSTRUCTEUR" %}
        <a href="{{ path('liste_lesson_instructeur', {'id' : section }) }}"
           class="d-flex justify-content-end text-end mt-2">Retour aux leçons</a>

    {% else %}
        <a href="{{ path('liste_lesson', {'id' : section }) }}" class="d-flex justify-content-end text-end mt-2">Retour
            aux leçons</a>
    {% endif %}
    <h1 class="text-center mt-3  color">{{ lesson.title }}</h1>

    <div class="mt-3">
        <div class="row ">
            <div class="col-xs-12 d-flex justify-content-center">
                <iframe width="600" height="355" src="{{ lesson.video }}" title="YouTube video player" frameborder="0"
                        allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                        allowfullscreen></iframe>
                {#                     <iframe width="560" height="315" src="{{ lesson.video }}" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
                #}
            </div>
        </div>
        <div class="row mt-5">
            <div class="col-xs-12">
                {{ lesson.content }}
            </div>
        </div>
        {% if  lesson.picture1   is not null %}
            <div class="row mt-3">
                <div class="col-xs-12">
                    <img height="75%" width="100%" src="{{ asset('Lesson/' ~ lesson.picture1) }}">
                </div>
            </div>
        {% endif %}
        {% if  lesson.picture2   is not null %}
            <div class="row mt-3">
                <div class="col-xs-12">
                    <img  height="100%" width="100%" src="{{ asset('Lesson/' ~ lesson.picture2) }}">

                </div>
            </div>
        {% endif %}
        {% if  lesson.picture3  is not null %}

            <div class="row mt-3">
                <div class="col-xs-12">
                    <img  height="100%" width="100%" src="{{ asset('Lesson/' ~ lesson.picture3) }}">
                </div>
            </div>
        {% endif %}

    </div>











{% endblock %}
