{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
    {% if error %}
        <div>Vos identifiants sont incorrects.</div>
    {% endif %}
    {% for message in app.flashes('inscription-apprenant') %}
        <div class="alert alert-success">
            {{ message }}
        </div>
    {% endfor %}

    <div class="d-flex justify-content-center align-items-center container mt-4">
        <div class="row page-log">
            <div class="col-md-6 ">


                <form action="{{ path('login') }}" method="post" class="formulaire-log ">

                    <img src="{{ asset('Images/' ~ 'logo-ecoit.png') }}" width="25%" height="35%">

                        <label for="username" class="mt-3"><i> E-mail</i> </label>
                        <input type="text" id="username" name="_username" value="{{ last_username }}" class="mt-3" placeholder="supercodeur@gmail.com"/>

                    <label for="password" class="mt-3"> <i>Mot de passe</i> </label>
                        <input type="password" id="password" name="_password" class="mt-3" placeholder="*******"/>

                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">


                        <input type="hidden" name="_target_path" value="{{ path('app') }}"/>

                        <button type="submit" class="mt-3" widht="auto" >Se connecter</button>

                </form>

            </div>
            <div class=" col-md-6 col-img">
                <img src="{{ asset('Images/' ~ 'enregistrementCandidat.png') }}" width="100%" height="100%" class="logo-log">
            </div>
        </div>
    </div>



{% endblock %}
