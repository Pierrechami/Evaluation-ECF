<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Welcome!{% endblock %}</title>
    <link rel="icon"
          href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
    {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
    {% block stylesheets %}
        {# {{ encore_entry_link_tags('app') }} #}
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
              integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
              crossorigin="anonymous">
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
                integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
                crossorigin="anonymous"></script>

        <link rel="stylesheet" href="{{ asset('CSS/style.css') }}">
    {% endblock %}

    {% block javascripts %}
        {#   {{ encore_entry_script_tags('app') }} #}
    {% endblock %}

</head>
<body class="container">
{% block header %}
    <nav class="navbar navbar-expand-lg navbar-light bg-light rounded border">
        <div class="container-fluid">
            <a class="navbar-brand" href="{{ path('app') }}">
                <img src="{{ asset('Images/' ~ 'logo-ecoit-removebg.png') }}" width="30%" height="40%">
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                    data-bs-target="#navbarSupportedContent"
                    aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0" id="ok">
                    <li class="nav-item">
                        <a class="nav-link active" href="{#  {{ path('adminregister_admin') }} #}" id="souligne">Accéder
                            au cours</a> 
                    </li>
                    {% if is_granted('ROLE_ADMIN') %}
                        <li class="nav-item">
                            <a class="nav-link active" href="  {{ path('app_user_index') }} " id="souligne">
                                Valider un instructeur</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active" href="{{ path('app_user_new') }}" id="souligne">
                                Créer un instructeur</a>
                        </li>

                    {% elseif is_granted('ROLE_CANDIDAT') %}
                        <li class="nav-item">
                            <a class="nav-link active" href="{{ path('candidate_index') }}">Mon profil</a>
                        </li>
                    {% elseif is_granted('ROLE_RECRUITEUR') %}
                        <li class="nav-item">
                            <a class="nav-link active" href="{{ path('to_apply_recruiter') }}">Liste des postulants</a>
                        </li>
                    {% elseif is_granted('ROLE_CONSULTANT') %}
                        <li class="nav-item">
                            <a class="nav-link active" href="{{ path('user_index') }}">Approuvez les Utilisateurs et les
                                Jobs</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active" href="{{ path('to_apply_job') }}">Liste des postulants</a>
                        </li>
                    {% endif %}
                </ul>

                {% if is_granted('ROLE_ADMIN') %}

                    <ul style="list-style: none;">
                        <li>
                            <strong>Rôle :</strong> Admin
                        </li>
                        <li>
                            <a class="link-danger" href="{{ path('logout') }}">Déconnexion</a>
                        </li>
                    </ul>


                {% elseif is_granted('ROLE_INSTRUCTEUR') %}
                    <ul style="list-style: none;">
                        <li>
                            <i>Bienvenue {{ app.user.firstName }} {{ app.user.name }}</i>
                        </li>
                        <li>
                            <strong>Rôle :</strong> Instructeur
                        </li>
                        <li>
                            <a class="link-danger" href="{{ path('logout') }}">Déconnexion</a>
                        </li>
                    </ul>



                {% elseif is_granted('ROLE_APPRENANT') %}
                    <ul style="list-style: none;">
                        <li>
                            <i>Bienvenue {{ app.user.pseudo }}</i>
                        </li>
                        <li>
                            <strong>Rôle :</strong> Apprenant
                        </li>
                        <li>
                            <a class="link-danger" href="{{ path('logout') }}">Déconnexion</a>
                        </li>
                    </ul>
                {% else %}
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0" id="ok">
                        <a href="{{ path('register_apprenant') }}" class="btn btn-secondary mx-4 mb-2">Créer un compte
                            apprenant</a>
                        <a href="{{ path('register_instructeur') }}" class="btn btn-secondary  mx-4  mb-2">Postuler en
                            tant
                            qu'instructeur </a>
                        <a href="{{ path('login') }}" class="btn btn-secondary mr-4  mx-4 mb-2">Se connecter</a>
                    </ul>
                {% endif %}

            </div>
        </div>
    </nav>

{% endblock %}

{% block body %}

{% endblock %}

{% block footer %}
{% endblock %}
</body>
</html>
