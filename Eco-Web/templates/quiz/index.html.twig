{% extends 'base.html.twig' %}

{% block title %}Quiz index{% endblock %}

{% block body %}

    <h1 class="color text-center mt-4 mb-3">Résultat du quiz</h1>
    <p class="text-end"><a href="{{ path('liste_lesson' , { 'id' : section}) }}">Retour à la section</a></p>
    <section class="response-quizz">

        <div>
            <div class="row">
                <div class="col-xs-12 mt-1 mb-1">
                    <h4 class="text-center text-decoration-underline"> Question 1</h4>
                </div>
            </div>
            <div class="row">
                <div class="col-xs-12">
                    <p><strong> {{ quizApprenant.question1 }}</strong></p>
                </div>
            </div>
            <div class="row">
                {% if quizApprenant.response1 == quizInstructeur.response1 %}
                <div class="col-xs-12">
                    <p><strong class="color">Bravo !</strong> Vous avez répondu correctement, la bonne réponse est
                        {% if  quizInstructeur.response1 == true %} <strong> Vrai</strong>
                        {% else %}<strong>Faux</strong>
                        {% endif %}
                    </p>
                    {% else %}
